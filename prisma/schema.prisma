generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Member {
  id               String        @id @default(cuid())
  name             String        @unique
  displayName      String
  generation       Generation
  hashtags         String
  videoAppearances VideoMember[]

  @@index([generation])
  @@map("members")
}

model Video {
  id                String         @id @default(cuid())
  videoId           String         @unique
  title             String
  description       String?
  publishedAt       DateTime
  thumbnailDefault  String?
  thumbnailMedium   String?
  thumbnailHigh     String?
  channelId         String
  channelTitle      String
  isOfficial        Boolean        @default(false)
  duration          String?
  viewCount         Int?
  likeCount         Int?
  category          VideoCategory?
  tags              String
  sourceQuery       String?
  crawledAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  memberAppearances VideoMember[]

  @@index([isOfficial])
  @@index([category])
  @@index([publishedAt])
  @@map("videos")
}

model VideoMember {
  id        String   @id @default(cuid())
  videoId   String
  memberId  String
  createdAt DateTime @default(now())
  member    Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@unique([videoId, memberId])
  @@index([memberId])
  @@index([videoId])
  @@map("video_members")
}

enum VideoCategory {
  CLIP
  SHORTS
}

enum Generation {
  MYSTIC
  UNIVERSE
  CLICHE
}
